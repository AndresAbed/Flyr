<button type="button" class="btn blue-btn btn-xs" 
  data-toggle="modal" data-target="#AddMusic" id="music-add"
  style="display: none;">
  <i class="fa fa-plus" style="font-size: 12px; margin-right: 2px;"></i>
  <b>Añadir</b>
</button>
<div class="modal fade" id="AddMusic">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">&times;</span><span class="sr-only">
        Cerrar</span></button>
        <h4 class="modal-title" id="myModalLabel">Añadir</h4>
      </div>
      <div class="modal-body">
        <%= form_for :music, url: club_musics_path(@club), 
        remote: true, html:{id: :new_music} do |f| %>
          <div class="row">
            <%= f.label "tipo de musica" %><br>
            <%= f.text_field :name %>
          </div>
          <div class="row">
            <%= f.submit "Aceptar"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<button class="btn blue-btn btn-xs" id="music-edit">
  <i class="fa fa-pencil" id="music-pencil" style="font-size: 12px; margin-right: 2px;"></i>
  <b id="music-edit-text">Editar</b>
</button>