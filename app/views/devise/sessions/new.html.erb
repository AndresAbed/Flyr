              </ul>
            </div>
          </div>  
        </nav>
      </div>
      <!-- Sign in form -->
      <div class="">
        <div class="welcome-alert">
          <% if alert %>
            <div class="alert alert-danger alert-dismissible fade in" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
              <p><%= alert %></p>
            </div>
          <% end %>
        </div>
        <div class="sign_in_container">
          <div class="sign_in_form">
            <div class="header">
              <i id="close" class="ion-android-close"></i>
              <h2>Iniciar sesión</h2>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="input-group form-content">
                <span class="input-group-addon"><i class="ion-person"></i></span>
                <%= f.text_field :username, autofocus: true, autocomplete: "off",
                 :placeholder => "Usuario", 
                 class: "form-control sign_in_field" %>
              </div>
              <div class="input-group form-content">
                <span class="input-group-addon"><i class="ion-locked"></i></span>
                <%= f.password_field :password, :placeholder => "Contraseña",
                class: "form-control sign_in_field" %>
              </div>
              <div class="form-content"><%= f.submit "Ingresar", class: "btn btn-default" %></div>
              <div class="links">
                <%= render "devise/shared/links" %>
              </div>
            <% end %>
            <div class="oauth-btns">
              <% if current_user %>
                Signed in as <strong><%= current_user.username %></strong>!
                <%= link_to "Sign out", signout_path, id: "sign_out" %>
              <% else %>
                <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook">
                  <i id="social-icons" class="fa fa-facebook"></i>
                  Iniciar sesión
                </a>
              <% end %>
              <a href="/auth/twitter" class="btn btn-block btn-social btn-twitter">
                  <i id="social-icons" class="fa fa-twitter"></i>
                  Iniciar sesión
              </a>
            </div>
          </div>
        </div>
      </div>
      <p class="logo">Flyr</p>
      <p class="slogan">Salir nunca fue tan facil</p>
