  <body class="unique">
    <div class="container">
      <% if resource.errors.empty? %>
      <% else %>  
        <div id="devise_error" class="alert alert-danger">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </div>
      <% end %>
      <div class="other-forms">
        <div id="form">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h2>Crear cuenta</h2>

          <div class="elements">
          <%= f.text_field :username, autofocus: true, autocomplete: "off",
           :placeholder => "Usuario", class: "form-control" %></div>

          <div class="elements">
          <%= f.text_field :name, autofocus: true, autocomplete: "off",
           :placeholder => "Nombre", class: "form-control" %></div>

          <div class="elements">
          <%= f.email_field :email, :placeholder => "Email", class: "form-control" %></div>

          <div class="elements">
          <%= f.email_field :email_confirmation, autocomplete: "off", 
          :placeholder => "Confirmar email", class: "form-control" %></div>

          <div class="elements"><% if @validatable %>(<%= @minimum_password_length %> caracteres mínimo)<% end %>
          <%= f.password_field :password, autocomplete: "off", :placeholder => "Contraseña", class: "form-control" %></div>

          <div class="elements">
          <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => " Repetir contraseña", class: "form-control" %></div>

          <div class="elements">
          <%= f.label :profile_img %> <br>
          <%= f.file_field :profile_img %></div>

          <div class="elements">
            <%= f.label :admin %><br />
            <%= f.label :admin, "Si" %>
            <%= f.radio_button :admin, true %>
            <%= f.label :admin, "No" %>
            <%= f.radio_button :admin, false, :checked => true %>
          </div>

          <div class="elements">
            <%= f.label :pr %><br />
            <%= f.label :pr, "Si" %>
            <%= f.radio_button :pr, true %>
            <%= f.label :pr, "No" %>
            <%= f.radio_button :pr, false, :checked => true %>
          </div>

          <div class="elements">
            <%= f.select(:club_id, pr_clubs.map{|e| ["#{e.name}", e.id]}, { prompt: "Seleccionar" }) %>
          </div>

          <div class="elements"><%= f.submit "Crear", class: "btn btn-warning" %></div>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>  
  <% end %>
</body>