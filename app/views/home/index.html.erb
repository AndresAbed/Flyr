<!-- Carousel -->
<% if @banner.present? %>
  <button id="modal-banner" type="button" class="banner-btn" data-toggle="modal" 
  data-target="#EditBanner" data-toggle="tooltip" 
  data-placement="right" title="Cambiar banner"></button>

  <div class="modal fade" id="EditBanner">
  	<div class="modal-dialog">
  		<div class="modal-content">
  			<div class="modal-header">
  				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  				<h4 class="modal-title" id="myModalLabel">Actualizar banner</h4>
  			</div>
  			<%= form_for :banner, url: banner_path(@banner), method: :patch do |b| %>
  				<div class="modal-body">
  					<div class="row images-fields">
  						<%= b.label "Imagen 1", class: "label label-success image-label" %>
  						<%= b.file_field :image1, class: "choose-btn" %>
  					</div>
  					<div class="row images-fields">
  						<%= b.label "Imagen 2", class: "label label-success image-label" %>
  						<%= b.file_field :image2, class: "choose-btn" %>
  					</div>
  					<div class="row images-fields">
  						<%= b.label "Imagen 3", class: "label label-success image-label" %>
  						<%= b.file_field :image3, class: "choose-btn" %>
  					</div>
  					<div class="row images-fields">
  						<%= b.label "Imagen 4", class: "label label-success image-label" %>
  						<%= b.file_field :image4, class: "choose-btn" %>
  					</div>
  				</div>
  				<div class="modal-footer">
  					<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
  					<%= b.submit 'Actualizar', class: "btn btn-primary" %>
  				</div>
  			<% end %>
  		</div>
  	</div>
  </div>

  <div class="carousel slide" id="BannerCarousel">
  	<ol class="carousel-indicators">
  		<li data-target="#BannerCarousel" data-slide-to="0" class="active"></li>
  		<li data-target="#BannerCarousel" data-slide-to="1"></li>
  		<li data-target="#BannerCarousel" data-slide-to="2"></li>
  		<li data-target="#BannerCarousel" data-slide-to="3"></li>
  	</ol>   
  	<div class="carousel-inner">
  		<div class="item active">
  			<img alt="Image1" src="<%= @banner.first.image1.url %>">
  		</div>
  		<div class="item">
  			<img alt="Image2" src="<%= @banner.first.image2.url %>">
  		</div>
  		<div class="item">
  			<img alt="Image3" src="<%= @banner.first.image3.url %>">
  		</div>
  		<div class="item">
  			<img alt="Image4" src="<%= @banner.first.image4.url %>">
  		</div>
  	</div>
  	<a class="left carousel-control" data-slide="prev" href="#BannerCarousel">‹</a>
  	<a class="right carousel-control" data-slide="next" href="#BannerCarousel">›</a>
  </div>
<% else %>
  <div class="modal fade" id="NewBanner">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Crear banner</h4>
        </div>
        <%= form_for :banner, url: banners_path(@banner) do |b| %>
          <div class="modal-body">
            <div class="row images-fields">
              <%= b.label "Imagen 1", class: "label label-success image-label" %>
              <%= b.file_field :image1, class: "choose-btn" %>
            </div>
            <div class="row images-fields">
              <%= b.label "Imagen 2", class: "label label-success image-label" %>
              <%= b.file_field :image2, class: "choose-btn" %>
            </div>
            <div class="row images-fields">
              <%= b.label "Imagen 3", class: "label label-success image-label" %>
              <%= b.file_field :image3, class: "choose-btn" %>
            </div>
            <div class="row images-fields">
              <%= b.label "Imagen 4", class: "label label-success image-label" %>
              <%= b.file_field :image4, class: "choose-btn" %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <%= b.submit 'Crear', class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="carousel slide" id="NewBannerCarousel">  
    <div class="carousel-inner">
      <div class="item active">
        <img alt="Image1" src="http://www.solidbackgrounds.com/images/2880x1800/2880x1800-tiffany-blue-solid-color-background.jpg">
      </div>
      <button class="new-banner-btn btn red-btn btn-lg" type="button" data-toggle="modal" data-target="#NewBanner">
        Crear Banner
      </button>
    </div>
  </div>
<% end %>

