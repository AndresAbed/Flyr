      </div>
      <%= form_for :event, url: events_path(@event) do |e| %>
        <div class="modal-body">
          <div class="row">
            <%= e.label "Nombre" %><br>
            <%= e.text_field :name %>
          </div>
          <div class="row">
            <%= e.label "Dirección" %><br>
            <%= e.text_field :address %>
          </div>
          <div class="row">
            <%= e.label "Fecha" %><br>
            <%= e.date_select :date, :start_year => Date.current.year, :end_year => Date.current.year+5 %>
