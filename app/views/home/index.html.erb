  <%= form_tag home_path, :method => 'get', :id => "clubs_search" do %>  
    <div class="input-group search">
      <span class="input-group-addon"><i class="fa fa-search"></i></span>
      <%= text_field_tag :clubsearch, params[:clubsearch], 
      :placeholder => "Buscar por nombre o dirección", 
      class: 'form-control' %>
    </div>
    <%= submit_tag 'submit', disabled: true, :style => "display: none;" %>
  <% end %>
</div>
<div class="clubs-grid">
	<div class="clubs-grid-container">
    <div id="clubs-partial"><%= render 'clubs' %></div>
	</div>
</div>

<!-- Modals -->

<% if current_user.is_admin? %>
  <div class="modal fade" id="EditBanner">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">Cambiar banner</h4>
        </div>
        <%= form_for :banner, url: banner_path(@banner), method: :patch do |b| %>
          <div class="modal-body">
            <div class="modal-left-column">
              <div>
                <%= b.label "Imagen 1" %>
                <%= b.file_field :image1 %>
              </div>
              <div>
                <%= b.label "Imagen 2" %>
                <%= b.file_field :image2 %>
              </div>
            </div>
            <div class="modal-right-column">
              <div>
                <%= b.label "Imagen 3" %>
                <%= b.file_field :image3 %>
              </div>
              <div>
                <%= b.label "Imagen 4" %>
                <%= b.file_field :image4 %>
              </div>
            </div>
            <div class="modal-btns">
              <%= b.submit 'Guardar', class: "btn mint-btn" %>
              <button type="button" class="btn hot-pink-btn" 
              data-dismiss="modal">Cancelar</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="modal fade" id="NewBanner">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Crear banner</h4>
        </div>
        <div class="modal-body">
          <%= form_for :banner, url: banners_path(@banner) do |b| %>
            <div class="row images-fields">
              <%= b.label "Imagen 1", class: "label label-success image-label" %>
              <%= b.file_field :image1, class: "choose-btn" %>
            </div>
            <div class="row images-fields">
              <%= b.label "Imagen 2", class: "label label-success image-label" %>
              <%= b.file_field :image2, class: "choose-btn" %>
            </div>
            <div class="row images-fields">
              <%= b.label "Imagen 3", class: "label label-success image-label" %>
              <%= b.file_field :image3, class: "choose-btn" %>
            </div>
            <div class="row images-fields">
              <%= b.label "Imagen 4", class: "label label-success image-label" %>
              <%= b.file_field :image4, class: "choose-btn" %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
              <%= b.submit 'Crear', class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>  
      </div>
    </div>
  </div>
<% end %>